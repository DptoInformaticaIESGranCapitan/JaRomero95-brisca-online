extends layout

block content
    div(class="row")
        h2(class="red-text text-darken-3 center") Registro
        form(class="col s12 m8 offset-m2" method="post" action="#")
            div(class="row")
                div(class="input-field col s12 l6")
                    input(id="name" type="text")
                    label(for="name") Nombre
                div(class="input-field col s12 l6")
                    input(id="apellidos" type="text")
                    label(for="apellidos") Apellidos
                div(class="input-field col s12 l6")
                    input(id="username" type="text")
                    label(for="username") Nombre de usuario
                div(class="input-field col s12 l6")
                    input(id="born" type="date" class="datepicker")
                    label(for="born") Fecha de nacimiento
                div(class="input-field col s12 l6")
                    input(id="passwd" type="password")
                    label(for="passwd") Contraseña
                div(class="input-field col s12 l6")
                    input(id="passwd2" type="password")
                    label(for="passwd2") Confirmar contraseña
                div(class="clearfix")
                div(class="margin-top")
                    button(class="btn waves-effect waves-light right" type="submit" name="action") Enviar
                        i(class="material-icons right") send